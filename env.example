# Environment Configuration Example
# Copy this file to .env and update the values

# Web Server Configuration
NODE_ENV=development
PORT=5000
CLIENT_URL=http://localhost:3000
LOG_LEVEL=info

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/snmp_db
REDIS_URL=redis://localhost:6379

# SNMP Configuration
SNMP_COMMUNITY=public
SNMP_VERSION=2c
SNMP_TIMEOUT=5000
SNMP_RETRIES=3

# Security Configuration
JWT_SECRET=your-secret-key-here
JWT_EXPIRES_IN=24h
BCRYPT_ROUNDS=10

# WebSocket Configuration
WEBSOCKET_PORT=5000
WEBSOCKET_PATH=/socket.io

# SNMP Manager Configuration
SNMP_MANAGER_PORT=8080
SNMP_MANAGER_HOST=localhost

# SNMP Agent Configuration
SNMP_AGENT_PORT=161
SNMP_AGENT_HOST=0.0.0.0
SNMP_AGENT_ID=agent-001

# Monitoring Configuration
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000

# Docker Configuration
DOCKER_REGISTRY=ghcr.io
DOCKER_NAMESPACE=your-username

# Kubernetes Configuration
KUBECONFIG_PATH=~/.kube/config
KUBERNETES_NAMESPACE=snmp-system

# External Services
EXTERNAL_API_URL=https://api.example.com
EXTERNAL_WEBHOOK_URL=https://webhook.example.com

# Feature Flags
ENABLE_TRAP_SIMULATION=true
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_SECURITY_SCANNING=true
